import java.util.Locale;

public class atividadeFixacao01 {

	public static void main(String[] args) {
			
		String product1 = "Computer";
		String product2 = "Office desk";
		
		int age = 30;
		int code = 5290;
		char gender = 'F';
		
		double price1 = 2100.00;
		double price2 = 650.50;
		double measure = 53.234567;
		
		double measureUs = 53.234567;
		
		System.out.printf("Poducts:%n%s, wich prince is $ %.2f. %n%s, wich price is $ %.2f. %n ", product1, price1, product2, price2);
		System.out.printf("%n");
		System.out.printf("Record: %d years old, code %d and gender %c. %n", age, code, gender);
		System.out.printf("%n");
		System.out.printf("Measue with eigth decimal places: %.8f. %nRounded (three decimal places): %.3f. %n", measure, measure);
		Locale.setDefault(Locale.US);
		System.out.printf("US decimal point: %.3f", measureUs)

	}

}
